generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("mongodb://localhost:27017")
}

model Event {
  id     String    @id @default(auto()) @map("_id") @db.ObjectId // 使用字符串类型作为ID，自动生成
  title  String
  start  DateTime
  end    DateTime?
  allDay Boolean   @default(false)
}
